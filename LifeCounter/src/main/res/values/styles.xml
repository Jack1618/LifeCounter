<resources>

    <style name="Theme.Transparent" parent="android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/ActionBarTransparent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="ActionBarTransparent" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/ActionBarTransparent.Title</item>
    </style>

    <style name="ActionBarTransparent.Title"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/action_bar_title</item>
    </style>

    <style name="Theme.Transparent.Main">
        <item name="android:actionBarStyle">@style/ActionBarTransparent.Main</item>
    </style>

    <style name="ActionBarTransparent.Main">
        <item name="android:displayOptions">none|showTitle</item>
        <item name="android:titleTextStyle">@style/ActionBarTransparent.Title.Main</item>
    </style>

    <style name="ActionBarTransparent.Title.Main">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PlayerLifeButton">
        <item name="android:background">@drawable/highlight_overlay</item>
    </style>

    <style name="PlayerLifeText" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/main_player_life_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PlayerPoisonText" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/main_player_poison_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SettingsHeader" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textColor">@color/settings_header_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SettingsItem" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@drawable/highlight_overlay</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/settings_item_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SettingsLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@drawable/highlight_overlay</item>
    </style>

    <style name="SettingsLinearLayoutTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/settings_item_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CreditsDialogHeader" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="CreditsDialogItem" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
